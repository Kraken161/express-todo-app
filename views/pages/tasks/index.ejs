<h1 class="mb-5">Lista tasków</h1>

<% tasks.forEach(task => { %>
<div class="card bg-light mb-5">
	<div class="card-body">
		<label>
			Ukończone: <input type="checkbox" disabled <% if (task.done === true) { %>
			checked <% } %>/>
		</label>

		<p class="h5"><%= task.title %></p>
		<p class="text-muted"><%= task.description %></p>

		<a href="/zadania/<%= task._id %>/edytuj" class="btn btn-outline-primary"
			>Edytuj</a
		>

		<a
			href="/zadania/<%= task._id %>/usun"
			class="btn btn-outline-danger"
			onclick="return confirm('Jesteś pewny że chcesz usunąć to zadanie?')"
			>Usuń</a
		>

		<form
			action="/zadania/<%= task._id %>/zmien-stan"
			method="POST"
			class="d-inline"
		>
			<button class="btn btn-outline-success">Oznacz jako ukończone</button>
		</form>
	</div>
</div>
<% }) %>

<a href="/zadania/dodaj" class="btn btn-primary mt-5">Dodaj nowe zadanie</a>
